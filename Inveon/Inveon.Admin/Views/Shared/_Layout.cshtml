<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inveon.BackOffice</title>   
   
</head>

<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"> INVEON </div>
            <div class="list-group list-group-flush">

                <a href="/Home/Index" title="Home"  class="list-group-item list-group-item-action bg-light">Dashboard</a>
                <a href="/Account/Index" title="Account"  class="list-group-item list-group-item-action bg-light">Account Management</a>
                <a href="/Product/Index" title="Ürünler" class="list-group-item list-group-item-action bg-light">Product Management</a>
           
            </div>           

        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            @await Html.PartialAsync($"_Header")

            <div class="container" style="margin-top: 1.4em">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>

    </div>
    <!-- /#wrapper -->
    <footer class="container">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>&copy; 2020-2021 Company, Inveon. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
    </footer>


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
